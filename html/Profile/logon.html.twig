{% extends 'base.html.twig' %}

{% block title %}
  Logon
{% endblock title %}

{% block content %}
  <div class="container">
    <h1>Logon</h1>
    
    <form action="{{ app.urlFor('user_logon_process') }}" method="post">
      <div class="form-group">
        <label for="username">Username</label>
        <input class="form-control" type="text" id="username" name="username" />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input class="form-control" type="password" id="password" name="password" />
      </div>
      <input class="form-control btn btn-default" type="submit" id="login" name="login" value="Login" />
    </form>
      
  </div>
{% endblock content %}