{% extends 'base.html.twig' %}

{% set user = usertoview %}

{% block title %}
  Profile details for {{ user.username }}
{% endblock title %}

{% if globals.user is defined and globals.user is not null %}
{% endif %}

{% block content %}
  <div class="container form">
    <h1>{{ user.firstName }} {{ user.surname }}</h1>
    <div><img src="../img/nophoto.jpg"></div>

    <dl>
      <dt>Mail</dt>
      <dd>{{ user.email }}</dd>
      <dt>Adres</dt>
      <dd>{{ user.address }}</dd>
      <dt>Postcode</dt>
      <dd>{{ user.postcode.postcode }}</dd>
    </dl>
    <a href="/" id="return_to_main" class="btn submit btn-default">Return to main menu</a>
  </div>
{% endblock content %}