{% extends 'base.html.twig' %}

{% block title %}
  Registreer
{% endblock title %}

{% block content %}
  <div class="container">
    <h2>Registratiegegevens</h2>
    <form action="{{ app.urlFor('user_register') }}" method="POST">
      
      <div class="form-group">
        <label class="form-control" for="id">Gebruikersnaam</label> 
        <input class="form-control" type="text" id="username" name="username" />
      </div>
      
      <div class="form-group">
        <label class="form-control" for="email">E-mail</label> 
        <input class="form-control" type="email" id="email" name="email" />
      </div>
      
      <input class="form-control btn btn-default" type="submit" id="verzend" name="verzend" value="Verzend" />
      
    </form>
  </div>
{% endblock content %}