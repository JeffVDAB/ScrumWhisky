{% extends 'base.html.twig' %}

{% block title %}
  List of categories
{% endblock title %}
{% set app = globals.app %}
{% block content %}
  <div class="container form">
    <h1>List of categories</h1>
    <div>
	    <dl>
	        {% for category in categories %}
                    <dt><span class="cat">{{ category.getCategory }}</span>
                    {% if globals.user.isAdmin() %}
                    <img class="editcat" src="../img/edit.png">
                {% endif %}</dt> 
	        	<dd></dd>        
	        {% endfor %}  
	     </dl>
	</div>

    <a href="/" id="return_to_main" class="btn submit btn-default">
          Return to main menu</a>    
  </div>
{% endblock content %}