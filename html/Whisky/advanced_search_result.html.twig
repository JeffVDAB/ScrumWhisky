{% extends 'base.html.twig' %}


 {% block title %}
 Search Whisky
{% endblock title %}

{% block content %}
  
  {% set app = globals.app %}
  
  <div id="adv_search" class="list container form">
    <h1>Your search yielded the following results</h1>
    
    <ul> 
      {% for whisky in whiskys %}
          {% set status = whiskylike['like' ~ whisky.getId ] %}
          <li class="cf">
              <a href="{{ app.urlFor('show_whisky_by_id', {"id" : whisky.getId } ) }}">
                <div id="w_bottle" class="thumb">
                  <img src="../img/whisky/{{ whisky.
                  getImagePath }}" height="80" width="50">
                </div>
                <p>{{ whisky.getName }}{% if globals.user.isAdmin() or globals.user.canReview()  %}
                  <a href="{{ app.urlFor('edit_whisky', {"id" : whisky.getId } ) }}"> 
                    <img src="../img/edit.png"
                  </a>
                {% endif %}
                </p>

              </a>
              <div id="item{{ whisky.getId }}" class="like-selector">
                 <a href="#" class="like-btn" data-whiskyid="{{ whisky.getId }}" data-userid="{{ globals.user.getId }}" data-pos="{{ whisky.likes.getState }}" data-id="{{ whisky.likes.getId }}" data-name="Like" onclick="like(this)">
                   <img src="../img/like_icon.png" >
                </a>
                <a href="#" class="like-btn" data-whiskyid="{{ whisky.getId }}" data-userid="{{ globals.user.getId }}" data-pos="{{ whisky.likes.getState }}"  data-id="{{ whisky.likes.getId }}"  data-name="Not Like" onclick="like(this)">
                  <img src="../img/dislike_icon.png" >
                </a>
                <a href="#" class="like-btn active" data-whiskyid="{{ whisky.getId }}" data-userid="{{ globals.user.getId }}" data-pos="{{ whisky.likes.getState }}"  data-id="{{ whisky.likes.getId }}"  data-name="Not Like" onclick="like(this)">
                  <img src="../img/like_icon_active.png" >
                </a>
                <a href="#" class="like-btn active" data-whiskyid="{{ whisky.getId }}" data-userid="{{ globals.user.getId }}" data-pos="{{ whisky.likes.getState }}"  data-id="{{ whisky.likes.getId }}"  data-name="Not Like" onclick="like(this)">
                  <img src="../img/dislike_icon_active.png" >
                </a>
              </div>
          </li>        
      {% endfor %} 
    </ul>
        <a href="/" id="return_to_main" class="btn submit btn-default">
          Return to main menu</a> 
  </div>
{% endblock content %}

{% block extrajs %}
   <script type="text/javascript" src="/js/main.js"></script>
 {% endblock extrajs %}